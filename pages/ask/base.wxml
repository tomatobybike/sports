<view  class="page">
  <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{waringMsg}}</view>
  <view class="cd-horizontal-timeline loaded">
      <div class="events-wrapper">
        <div class="events" style="width: 99vw;margin:0 auto;">
          <ol>
            <li><a href="#0" style="left: 3%;">选择类型</a></li>
            <li><a href="#0" class="selected" style="left: 30%;">基础属性</a></li>
            <li><a href="#0" style="left: 60%;">专项属性</a></li>
            <li><a href="#0" style="left: 88%;">计分</a></li>
          </ol>
        </div>
      </div> 
  </view>
  <view class="page__bd_spacing">
    <form bindsubmit="formSubmit" >
        <view class="weui-cells__title">基础属性</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">身高</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="long"  type="text" class="weui-input" placeholder="请输入身高" />
                </view>
                <view class="weui-cell__ft">
                    cm
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">年龄</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="age" type="text" class="weui-input" placeholder="请输入年龄" />
                </view>
                <view class="weui-cell__ft">
                    岁
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">体重</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="weight" type="text" class="weui-input" placeholder="请输入体重" />
                </view>
                <view class="weui-cell__ft">
                    kg
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">球龄</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="yearsOfSport" type="text" class="weui-input" placeholder="请输入球龄" />
                </view>
                <view class="weui-cell__ft">
                    年
                </view>
            </view>
        </view>
        <button class="weui-btn" formType="submit" type="primary" >下一步</button>
    </form>
  </view>
</view>